@model AddPasswordToLocalUserViewModel
<h2>Add Password</h2>
<hr />
<p class="text-info">
    Giriş için bir dış hesap kullanıyorsunuz ve yerel bir username/password 'a sahip değilsiniz.'
    Yerel hesapla giriş yapmak istiyorsanız yeni bir şifre ekleyiniz.
</p>
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="NewPassword" class="col-form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary btn-sm">Şifre Ekle</button>
        </form>
    </div>

</div>

